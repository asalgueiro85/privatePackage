<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{{ 'title' | trans }}{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
    <footer>
        {# ... #}
        {% set locale = app.request.locale %}
        {% if locale == 'es' %}
        <span>Español</span>
            <a href="{{ path('homepagenew', { '_locale': 'en' }) }}">English</a>
        {% elseif locale == 'en' %}
            <a href="{{ path('homepagenew', { '_locale': 'es' }) }}">Español</a>
            <span>English</span>
        {% endif %}
    </footer>
</html>
