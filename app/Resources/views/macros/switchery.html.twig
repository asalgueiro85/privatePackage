{% macro css() %}
  <link rel="stylesheet" href="{{ asset('components/switchery/dist/switchery.min.css') }}"/>
{% endmacro %}

{% macro js() %}
  <script type="text/javascript" src="{{ asset('components/switchery/dist/switchery.min.js') }}"></script>
{% endmacro %}

{% macro default_component() %}
  var elems = Array.prototype.slice.call(document.querySelectorAll('.ios-switch'));

  elems.forEach(function(html) {
    var switchery = new Switchery(html,{color: '#1AB394', secondaryColor: '#ED5565', size: 'small'});
  });
{% endmacro %}