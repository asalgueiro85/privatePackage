{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <p class="text-center clearsans-medium fs-16 tc-fec107 marB25">{{ 'FORGOTTEN_YOUR _PASSWORD?'|trans({},'frontend') }}</p>
        </div>

        <div class="col-sm-10 col-sm-offset-1">
            <div class="form-group">
                <input id="input-reset" type="text" class="form-control register-placeholder" name="username" required="required" placeholder="{{ 'resetting.request.username'|trans({},'FOSUserBundle') }}">
            </div>
        </div>

        <div class="col-sm-8 col-sm-offset-2 text-center marB20">
            <button type="submit" class="btn btn-block btn-success btn-register w153">{{ 'resetting.request.submit'|trans({},'FOSUserBundle') }}</button>
        </div>
    </div>
</form>