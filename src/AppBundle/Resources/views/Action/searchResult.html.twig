                                <div class="col-sm-6 padl0 padR0">
                                    <div class="col-sm-12 padR0 padl0">
                                        <div class="col-sm-3 padR0 padl0">
                                            <img class="img-result-object" src="{{ asset('img/back/male.png') }} ">
                                        </div>
                                        <div class="col-sm-9 padl0 padR0">
                                            <div class="">
                                                <span class="font11 color-128">{{ entity.user.birthDate|age }} years</span><br>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 padl0 padR0 border-left">
                                    <div class="col-sm-12 padR0 padl0 text-center">
                                        <div class="col-sm-4 padR0 padl0">
                                            <img class="img-result-object" src="{{ asset('img/back/packet/certification.png') }} ">
                                        </div>
                                        <div class="col-sm-8 padl0 padR0">
                                            <div class="">
                                                <span class="font11 color-128">100%</span><br>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {#<div class="col-sm-3 padl0 padR0">#}
                            {#<span class="">4.3</span>#}
                            {#<span class="">45</span>#}
                            {#</div>#}
                        </div>
                        <div class="col-sm-6 padR0 padl0 marT-5">
                            <div class="col-sm-12 padR0 padl0">
                                <div class="col-sm-5 padL10 padR0 border-left text-center">
                                    <img class="" src="{{ asset('img/back/packet/paketes.png') }} ">
                                </div>
                                <div class="col-sm-7 padl0 padR0">

                                    <div class="">
                                        <span class=""><strong>28</strong></span>
                                        <span class="color-128">Trips</span>
                                    </div>

                                </div>
                            </div>
                            {#<div class="col-sm-3 padl0 padR0">#}
                            {#<span class="">4.3</span>#}
                            {#<span class="">45</span>#}
                            {#</div>#}
                        </div>

                    </div>

                </div>

                <div class="row col-sm-12 padR0">
                    <div class="col-sm-4 f-right text-center padl0 padR0 marT10 marB10">
                        <a ng-click="actionCtrl.packet_notify('{{ entity.id }}','{{ id }}','{{ type }}')" onClick="this.disabled=true"
                           class="btn btn-block btn-success btn-register bc-33b5e6">{{ 'back.notify'|trans }}</a>
                    </div>
                </div>
            </div>
            </div>
                {% endfor %}
            </div>
            {#elementos de la tabla#}
        </div>
    </div>

